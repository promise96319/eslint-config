{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.1",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish",
